rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Match the transactions collection
    match /transactions/{transactionId} {

      // Allow read, update, delete if authenticated and user_id matches
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.user_id;

      // Allow create if authenticated and user_id in the new document matches uid
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
    }
  }
}
